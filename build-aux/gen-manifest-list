#! /bin/sh

set -e

if [ -z "$1" ]; then
    echo "usage: $0 <srcdir> [src...]"
    exit 1
fi

src_dir=$1
shift 1

list_modules()
{
    for src in $@; do
        src="$src_dir/$src"
        list=`sed -rn -e 's/^\s*(MODULE|STREAM_MODULE|BINDING)_REGISTER\((.*)\)\s*$/\2/p' "$src"`
        for mod in $list; do
            echo $mod
        done
    done
}

# some shells don't support `set -e -o pipefail'
list=`list_modules $@`
list=`echo $list | sort`

if [ -z "$list" ]; then
    echo "manifest list is empty!" 1>&2
    exit 1
fi

echo "/* automatically generated file; do not edit */"
echo "#ifndef _MANIFEST_LIST_H_"
echo "#define _MANIFEST_LIST_H_ 1"
echo
echo "#ifndef _ASTRA_H_"
echo "#   error \"Please include <astra.h> first\""
echo "#endif /* !_ASTRA_H_ */"
echo
echo "#include <luaapi/module.h>"
echo

echo '/* extern declarations */'
for mod in $list; do
    echo "MODULE_MANIFEST_DECL(${mod});"
done
echo

echo '/* manifest list */'
echo "static const module_manifest_t *manifest_list[] ="
echo "{"
for mod in $list; do
    echo "    &MODULE_SYMBOL(${mod}),"
done
echo "    NULL,"
echo "};"

echo
echo "#endif /* _MANIFEST_LIST_H_ */"
